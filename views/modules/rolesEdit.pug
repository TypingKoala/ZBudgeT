.masonry-item.col-md-6
    .bgc-white.p-20.bd
        h6.c-grey-900 Edit #{user.name}'s Roles
        .mT-30
            .list-group
                for role in allRoles
                    if rolesActive[role.roleName]
                        a.list-group-item.list-group-item-action.active(href="#") #{role.roleName}
                    else
                        a.list-group-item.list-group-item-action(href="#") #{role.roleName}