doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width,initial-scale=1,shrink-to-fit=no')
    title Sign Up
    style.
      #loader{transition:all .3s ease-in-out;opacity:1;visibility:visible;position:fixed;height:100vh;width:100%;background:#fff;z-index:90000}#loader.fadeOut{opacity:0;visibility:hidden}.spinner{width:40px;height:40px;position:absolute;top:calc(50% - 20px);left:calc(50% - 20px);background-color:#333;border-radius:100%;-webkit-animation:sk-scaleout 1s infinite ease-in-out;animation:sk-scaleout 1s infinite ease-in-out}@-webkit-keyframes sk-scaleout{0%{-webkit-transform:scale(0)}100%{-webkit-transform:scale(1);opacity:0}}@keyframes sk-scaleout{0%{-webkit-transform:scale(0);transform:scale(0)}100%{-webkit-transform:scale(1);transform:scale(1);opacity:0}}
    link(href='style.css', rel='stylesheet')
  body.app
    #loader
      .spinner
    script.
      window.addEventListener('load', () => {
        const loader = document.getElementById('loader');
        setTimeout(() => {
          loader.classList.add('fadeOut');
        }, 300);
      });
    .peers.ai-s.fxw-nw.h-100vh
      .peer.peer-greed.h-100.pos-r.bgr-n.bgpX-c.bgpY-c.bgsz-cv(style='background-image:url(assets/static/images/bg.jpg)')
        .pos-a.centerXY
          .bgc-white.bdrs-50p.pos-r(style='width:120px;height:120px')
            img.pos-a.centerXY(src='assets/static/images/logo.png', alt='')
      .col-12.col-md-4.peer.pX-40.pY-80.h-100.bgc-white.scrollable.pos-r(style='min-width:320px')
        h4.fw-300.c-grey-900.mB-40 Register
        form(method="post" action="signup")
          .form-group
            label.text-normal.text-dark Name
            input.form-control(type='text', placeholder='John Doe', name='name')
          .form-group
            label.text-normal.text-dark Email Address
            input.form-control(type='email', placeholder='name@email.com', name='email')
          .form-group
            label.text-normal.text-dark Password
            input.form-control(type='password', placeholder='Password', name='password')
          .form-group
            label.text-normal.text-dark Confirm Password
            input.form-control(type='password', placeholder='Password', name='confirmPassword')
          .form-group
            button.btn.btn-primary Register
    script(type='text/javascript', src='vendor.js')
    script(type='text/javascript', src='bundle.js')
